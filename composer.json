{
    "name": "peter-fox/phpunit-toon-result-printer",
    "description": "A PHPUnit results printer that works with the TOON format",
    "keywords": [
        "Peter Fox",
        "phpunit-toon-result-printer"
    ],
    "homepage": "https://github.com/peter-fox/phpunit-toon-result-printer",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Fox",
            "email": "peter.fox@peterfox.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PeterFox\\PhpUnitToonResultPrinter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PeterFox\\PhpUnitToonResultPrinter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
